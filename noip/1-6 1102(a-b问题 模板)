//map映射
#include<iostream>
#include<vector>
#include<map>
typedef long long ll;
using namespace std;
int main()
{
    int n,c;
    cin>>n>>c;
    vector<ll>a(n);
    map<ll,ll>times;
    for(int i=0;i<n;i++)
    {
        cin>>a[i];
        times[a[i]]++;
        a[i]-=c;
    }
    ll sum=0;
    for(int i=0;i<n;i++) sum+=times[a[i]];
    cout<<sum;
    return 0;
}

//也可以用upper_bound()和lower_bound和sort排序后的数组来对相同数字计数
