#include<iostream>
#include<vector>
#include<queue>
using namespace std;
int main()
{
    int n,a,b;
    cin>>n>>a>>b;
    vector<int>num(n);
    for(int i=0;i<n;i++)
        cin>>num[i];
    if(a==b) {
        cout<<0;
        return 0;
    }
    vector<int>dist(n+1,-1);
    queue<int>q;
    dist[a]=0;
    q.push(a);
    while(!q.empty())
    {
        int u=q.front();
        q.pop();//取头弹出
        if(u==b){
            cout<<dist[u];
            return 0;
        }
        int ways[2]={u+num[u-1],u-num[u-1]};
        for(int v:ways)
        {
            if(v>=1 && v<=n && dist[v]==-1){
                dist[v]=dist[u]+1;
                q.push(v);
            }
        }
    }
    cout<<-1;
    return 0;
}
